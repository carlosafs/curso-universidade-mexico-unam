 
# Algumas Funcoes Matematicas



# funcao exponencial --- exp()
# funcao logaritmica --- log()
# funcao logaritmica de base 10 --- log10()
# funcao raiz quadrada --- sqrt()
# funcao valor absoluto --- abs()
# funcao fatorial --- factorial()

# funcao trigonometrica basica
        # seno -- -- --sin() 
        # cosseno -- --cos()
        # tangente -- -tan()

# funcao minimo e maximo
        # minimo -- min()
        # maximo -- max()

# funcao indice de valor
        # minimo -- which.min()
        # maximo -- which.max()

# funcao minimo e maximo de varios vetores
        # minimo -- pmin()
        # maximo -- pmax()

# funcao soma e produto de um vetor
        # soma --- -- sum()
        # produto --- prod()

# funcao acumulativa de soma e produto de um vetor
        # soma --- -- cumsum()
        # produto --- cumprod()

# funcao arrendondamento para inteiros
        # inteiro mais proximo --- round()
        # inteiro anterior --- --- floor()
        # inteiro posterior --- -- ceiling()

# funcao para algebra linear --- %*%
# funcao produto e soma de dois vetores de uma vez --- crossprod()
#resolvendo
a <- c(1, 2, 3)
b <- c(4, 5, 6)

crossprod(a, b) 
#Resposta: 4 + 10 + 18 = 32

# funcao resolve sistemas de equacoes lineares e encontra matrizes inversa --- solve()
        ###  exemplo: a + b = 2
        ###          -a + b = 4
# resolvendo

x <- matrix(c(1, -1, 1, 1), 2, 2)
y <- c(2, 4)
solve(x, y)
solve(x)
solve(x) %*% x

